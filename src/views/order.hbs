<div class="container">
  <h1>üì¶ ƒê∆°n h√†ng c·ªßa t√¥i</h1>

  <div id="orderList"></div>

  <div id="empty" class="empty" style="display:none">
    <div style="font-size: 60px; margin-bottom: 20px;">üõçÔ∏è</div>
    <h3>H√†nh trang c·ªßa b·∫°n ƒëang tr·ªëng</h3>
    <p style="color:var(--text-muted)">C√≥ v·∫ª nh∆∞ b·∫°n ch∆∞a th·ª±c hi·ªán cu·ªôc giao d·ªãch n√†o.</p>
    <a href="/" class="btn-shop">Quay l·∫°i C·ª≠a h√†ng</a>
  </div>
</div>

<script>
/* ===== AUTH ===== */
const Auth = {
  accessToken: null,
  async refresh() {
    try {
      const res = await fetch('/api/auth/refreshToken', { method: 'POST', credentials: 'include' });
      if (!res.ok) throw new Error('NOT_LOGGED_IN');
      const data = await res.json();
      this.accessToken = data.accessToken;
    } catch (e) { window.location.href = '/signin'; }
  },
  async init() {
    if (!this.accessToken) await this.refresh();
  }
};

async function apiFetch(url, options = {}) {
  await Auth.init();
  let res = await fetch(url, {
    ...options,
    headers: { ...(options.headers || {}), Authorization: `Bearer ${Auth.accessToken}` }
  });
  if (res.status === 401) {
    await Auth.refresh();
    return fetch(url, {
      ...options,
      headers: { ...(options.headers || {}), Authorization: `Bearer ${Auth.accessToken}` }
    });
  }
  return res;
}

/* ===== ORDERS LOGIC ===== */
const orderList = document.getElementById('orderList');
const emptyEl = document.getElementById('empty');

function formatDate(d) {
  return new Date(d).toLocaleString('vi-VN', { 
    day: '2-digit', month: '2-digit', year: 'numeric', 
    hour: '2-digit', minute: '2-digit' 
  });
}

function formatMoney(v) {
  return Number(v || 0).toLocaleString('vi-VN') + ' ‚Ç´';
}

async function loadOrders() {
  try {
    const res = await apiFetch('/api/order');
    const result = await res.json();
    const orders = result.data || [];

    if (orders.length === 0) {
      emptyEl.style.display = 'block';
      return;
    }

    orderList.innerHTML = orders.map(order => {
      const status = order.status || 'PENDING';
      
      // Render chi ti·∫øt t·ª´ng item bao g·ªìm gi√° ƒë∆°n v·ªã v√† t·ªïng gi√° c·ªßa item ƒë√≥
      const itemsHtml = (order.items || []).map(i => {
        const unitPrice = Number(i.price || 0);
        const qty = Number(i.quantity || 0);
        return `
          <div class="item-line">
            <div class="item-info">
              <span class="item-name">${i.product_name}</span>
              <span class="item-price-unit">ƒê∆°n gi√°: ${formatMoney(unitPrice)}</span>
            </div>
            <div class="item-qty-total">
              <strong>x${qty}</strong>
              <span class="item-total-price">${formatMoney(unitPrice * qty)}</span>
            </div>
          </div>
        `;
      }).join('');

      return `
        <div class="order-card">
          <div class="order-header">
            <div class="order-id">M√£ ƒë∆°n #${order.id}</div>
            <div class="status ${status}">${status}</div>
          </div>

          <div class="order-body">
            <div class="info-group">
              <div class="label">T·ªïng ƒë∆°n h√†ng</div>
              <div class="value total-value">${formatMoney(order.total)}</div>
            </div>

            <div class="info-group">
              <div class="label">Ng√†y ƒë·∫∑t h√†ng</div>
              <div class="value">${formatDate(order.created_at)}</div>
            </div>

            <div class="info-group">
              <div class="label">C·∫≠p nh·∫≠t l√∫c</div>
              <div class="value">${formatDate(order.updated_at)}</div>
            </div>

            ${order.note ? `<div class="note"><b>Ghi ch√∫:</b> ${order.note}</div>` : ''}

            <div class="items-container">
              <h4>Chi ti·∫øt s·∫£n ph·∫©m</h4>
              ${itemsHtml || '<div class="label" style="text-align:center; padding:10px;">Kh√¥ng c√≥ d·ªØ li·ªáu v·∫≠t ph·∫©m</div>'}
            </div>
          </div>
        </div>
      `;
    }).join('');
  } catch (err) {
    orderList.innerHTML = `<div class="empty">C√≥ l·ªói x·∫£y ra khi t·∫£i d·ªØ li·ªáu.</div>`;
  }
}

loadOrders();
</script>

