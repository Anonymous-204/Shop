<body>

  <div class="blob"></div>
  <div class="blob"></div>

  <div class="card">
    <div class="logo-container">üõí</div>
    <h1>Ch√†o m·ª´ng tr·ªü l·∫°i</h1>
    <p class="sub">Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ ti·∫øp t·ª•c kh√°m ph√°</p>

    <form id="login-form">
      <div class="field">
        <label for="username">T√™n ng∆∞·ªùi d√πng</label>
        <input id="username" name="username" type="text" placeholder="T√™n c·ªßa b·∫°n..." required />
      </div>

      <div class="field">
        <label for="password">M·∫≠t kh·∫©u</label>
        <input id="password" name="password" type="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required />
      </div>

      <button type="submit" id="login-btn">ƒêƒÉng nh·∫≠p ngay</button>
    </form>

    <div id="message" class="message"></div>

    <div class="link">
      Ch∆∞a c√≥ t√†i kho·∫£n? <a href="/signup">Tham gia ngay</a>
    </div>
  </div>

  <script>
    const form = document.getElementById("login-form");
    const messageEl = document.getElementById("message");
    const button = document.getElementById("login-btn");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      messageEl.textContent = "";
      messageEl.className = "message";
      button.disabled = true;

      const username = form.username.value.trim();
      const password = form.password.value;

      try {
        const res = await fetch("/api/auth/signin", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: "include",
          body: JSON.stringify({ username, password })
        });

        if (!res.ok) {
          let msg = "ƒêƒÉng nh·∫≠p th·∫•t b·∫°i";
          try {
            const data = await res.json();
            if (data?.message) msg = data.message;
          } catch (_) {}
          messageEl.textContent = msg;
          messageEl.classList.add("error");
          button.disabled = false;
          return;
        }

        messageEl.textContent = "ƒêƒÉng nh·∫≠p th√†nh c√¥ng! ƒêang chuy·ªÉn h∆∞·ªõng...";
        messageEl.classList.add("success");

        setTimeout(() => {
          window.location.href = "/";
        }, 800);

      } catch (err) {
        messageEl.textContent = "L·ªói k·∫øt n·ªëi server.";
        messageEl.classList.add("error");
        button.disabled = false;
      }
    });
  </script>

